<resources>

    <!-- Base application theme. -->
    <style name="Theme.Staves" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/window_background_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="checkedIconTint">@color/white_shade</item>
        <item name="colorOnSecondary">@color/black_dark_mode</item>
        <item name="android:statusBarColor">@color/black_dark_mode</item>
        <item name="android:navigationBarColor">@color/black_dark_mode</item>
    </style>

    <style name="Theme.Staves.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="RecyclerViewTextStyle">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionBarText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black_light_dark_mode</item>
    </style>

    <style name="NavigationTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>